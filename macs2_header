rule macs2_header:
    input: 
        "macs2/broadpeak/{sample}_peaks.broadPeak"
    output:
        "macs2/broadpeak/{sample}_peaks_header.broadPeak"
    params: 
        err="macs2/broadpeak/{sample}_macs2header.stderr", out="macs2/broadpeak/{sample}_macs2header.stdout", name="macs2_header"
    message: 
        """--- macs2 header"""
    shell:
        "echo -e 'chrom\tstart\tend\tname\tscore\tstrand\tsignalvalue\tpval\tqval\tpeak' | cat - {input} > {output}"